<%# title "Guests" %>
<h1>My Guests</h1>
<table class ="tbl">
	<thead class ="tbl">
    <th>Host</th>
    <th>Name</th>
    <th>Email</th>
    <th>Notes</th>
  </thead>
  <% for guest in @guests %>
    <tr>
      <td><%= guest.host.first_name %> <%= guest.host.last_name %></td>
      <td><%= guest.name %></td>
      <td><%= guest.email %></td>
      <td><%= guest.notes %></td>
      <td><%= link_to "Show", guest %></td>
      <td><%= link_to "Edit", edit_guest_path(guest) %></td>
      <td><%= link_to "Destroy", guest, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>


<p><%= link_to "Add A New Guest", new_guest_path %></p>
