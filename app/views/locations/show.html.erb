<% title "Location" %>

<p>
  <strong>Host:</strong>
  <%= @location.host.first_name %> <%= @location.host.last_name %>
</p>
<p>
  <strong>Name:</strong>
  <%= @location.name %>
</p>
<p>
  <strong>Street:</strong>
  <%= @location.street %>
</p>
<p>
  <strong>City:</strong>
  <%= @location.city %>
</p>
<p>
  <strong>State:</strong>
  <%= @location.state %>
</p>
<p>
  <strong>Zip:</strong>
  <%= @location.zip %>
</p>
<p>
  <%= link_to "Edit", edit_location_path(@location) %> |
  <%= link_to "Destroy", @location, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", locations_path %>
</p>
