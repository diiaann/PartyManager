<%= form_for @invitation do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :party_id %><br />
	<%= f.collection_select :party_id, current_host.parties.all, :id, :name, :prompt => "Select ..."%>
  </p>
  <p>
    <%= f.label :guest_id %><br />
	<%= f.collection_select :guest_id, current_host.guests.all, :id, :name, :prompt => "Select ..."%>
  </p>
  <p>
    <%= f.label :expected_attendees %><br />
    <%= f.text_field :expected_attendees %>
  </p>
  <p><%= f.submit (@invitation.new_record? ? "Create" : "Update") %></p>
<% end %>
