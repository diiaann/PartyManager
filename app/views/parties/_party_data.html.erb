<h2>Party Information</h2>
<p>
  <strong>Party Type:</strong>
  <%= @party.party_type.name %>
</p>
<p>
  <strong>Host:</strong>
  <%= "#{current_host.first_name}, #{current_host.last_name}"%>
</p>
<p>
  <strong>Name:</strong>
  <%= @party.name %>
</p>
<p>
  <strong>Location:</strong>
  <%= @party.location.name %>
</p>
<p>
  <strong>Date:</strong>
  <%= @party.party_date.strftime("%m/%d/%y") %>
</p>
<p>
  <strong>Start Time:</strong>
  <%= @party.start_time.strftime("%a,%l:%M%p") %>
</p>
<p>
  <strong>End Time:</strong>
  <%= @party.end_time.strftime("%a,%l:%M%p") %>
</p>
<p>
  <strong>Description:</strong>
  <%= @party.description %>
</p>
<p>
  <strong>Rsvp Date:</strong>
  <%= @party.rsvp_date.strftime("%m/%d/%y") %>
</p>