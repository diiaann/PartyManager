<%= form_for @party do |f| %>
	<%= f.error_messages %>
	<div class="clearfix">
		<%= f.label :name, :class =>"xlInput3" %>
		<%= f.text_field :name, :class =>"input" %>
	</div>
	<div class="clearfix">
	<%= f.label :location_id, :class => "stackedSelect" %>
	<%= f.collection_select :location_id, current_host.locations.all, :id, :name, :prompt => "Select ...", :class =>"stackedSelect" %>
</div>
<div class="field">
	<%= f.label :party_date %><br />
	<%= f.date_select :party_date, :order => [:month, :day, :year],:start_year => Time.now.year%>
</div>

<div class="field">
	<%= f.label :start_time %><br />
	<%= f.time_select :start_time %>
</div>

<div class="field">
	<%= f.label :end_time %><br />
	<%= f.time_select :end_time %>
</div>

<div class="field">
	<%= f.label :description %><br />
	<%= f.text_area :description %>
</div>

<div class="field">
	<%= f.label :rsvp_date %><br />
	<%= f.date_select :rsvp_date, :include_blank => true %>
</div>

<p><%= f.submit %></p>
<% end %>

