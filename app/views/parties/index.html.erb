<% title "Parties" %>

<table class ="tbl">
  <thead class ="tbl">
    <th>Party Type</th>
    <th>Name</th>
    <th>Location</th>
    <th>Date</th>
    <th>Start Time</th>
    <th>End Time</th>
    <th>Description</th>
    <th>Rsvp Date</th>
	<th></th>
	<th></th>
	<th></th>
  </thead>
  <% for party in @parties %>
    <tr>
      <td><%= party.party_type.name %></td>
      <td><%= party.name %></td>
      <td><%= party.location.name %></td>
      <td><%= party.party_date.strftime("%m/%d/%y") %></td>
      <td><%= party.start_time.strftime("%a,%l:%M%p") %></td>
      <td><%= party.end_time.strftime("%a,%l:%M%p") %></td>
      <td><%= party.description %></td>
      <td><%= party.rsvp_date.strftime("%m/%d/%y") %></td>
      <td><%= link_to "Show", party %></td>
      <td><%= link_to "Edit", edit_party_path(party) %></td>
      <td><%= link_to "Destroy", party, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Party", new_party_path %></p>
