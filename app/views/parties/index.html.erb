<%# title "Parties" %>
<h1>My Parties</h1>
<table class="tbl">
	<thead class="tbl">
		<th>Party Type</th>
		<th>Host</th>
		<th>Name</th>
		<th>Location</th>
		<th>Date</th>
		<th>Time</th>
		<th>Description</th>
		<th>RSVPs</th>
		<th>Expected</th>
		<th>Confirmed</th>
	</thead>
	<% for party in @parties %>
	<tr>
		<td><%= party.party_type.name %></td>
		<td><%= "#{party.host.first_name} #{party.host.last_name}" %></td>
		<td><%= party.name %></td>
		<td><%= party.location.name %></td>
		<td><%= party.party_date.strftime("%B %d, %Y") %></td>
		<td><%= "#{party.start_time.strftime("%I:%M %p")} - #{party.end_time.strftime("%I:%M %p")}" %> </td>
		<td><%= party.description %></td>
		<td>
			<% if (party.rsvp_date.nil?) %>
			No RSVP required
			<% else %>
			<%= party.rsvp_date.strftime("%B %d, %Y") %><% end %>
		</td>
		<td><%=party.expected%></td>
		<td><%=party.confirmed%></td>
		<td><%= link_to "Show", party %></td>
		<td><%= link_to "Edit", edit_party_path(party) %></td>
		<td><%= link_to "Destroy", party, :confirm => 'Are you sure?', :method => :delete %></td>
	</tr>
	<% end %>
</table>

<p><%= link_to "New Party", new_party_path %></p>
