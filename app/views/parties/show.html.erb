<h1><%= @party.name%> <small><%= @party.party_date.strftime("%B %d, %Y")%>, <%= "#{@party.start_time.strftime("%I:%M %p")} - #{@party.end_time.strftime("%I:%M %p")}"  %></small></h1>


<h3>Overview</h3>
<div class ="row">
	<div class="span5"> 
		<h5>Map</h5>
		<p><%= image_tag @party.create_map_link%></p>
		<address><%= simple_format(@party.location.address)%></address>	
	</div>
	<div class="span8">
		<h5>hosted by, <%= "#{@party.host.first_name} #{@party.host.last_name}" %></h5>
		<p><%= @party.description %></p>
	</div>
</div>

<h3>Reservations</h3>

<div class="row">
	<div class="span5"><%= render :partial => "current_guests" %> </div>
	<div class ="span6">
		<h4>Information</h4>
		<p>
			<strong>RSVP date:</strong>
			<% if (@party.rsvp_date.nil?) %>
			No RSVP required
			<% else %>
			<%= @party.rsvp_date.strftime("%B %d, %Y") %></td>
			<% end %>
		</p>
		<p>
			<strong>Expected Attendance: </strong>
			<%= @party.expected %>
		</p>

		<p>
			<strong>Confirmed Attendance: </strong>
			<%= @party.confirmed %>
		</div>
	</div>
	<%= link_to "Edit", edit_party_path(@party) %> |
	<%= link_to "Destroy", @party, :confirm => 'Are you sure?', :method => :delete %> |
	<%= link_to "View All", parties_path %> |
	<%= link_to "Email All Guests", email_path(@party), :confirm => 'Are you sure'%>

</p>

