<% unless current_host %>
<p>Sign up <%= link_to "click here to login.", login_path %></p>
<%end%>

<%if current_host%>
<h2>Welcome <%="#{current_host.first_name}"%> <%="#{current_host.last_name}"%></h2>
<% unless current_host.parties.all.empty? %>
<table class ="tbl">
  <thead class ="tbl">
    <th>Party Type</th>
    <th>Name</th>
    <th>Location</th>
    <th>Date</th>
    <th>Start Time</th>
    <th>End Time</th>
    <th>Description</th>
    <th>Rsvp Date</th>
  </thead>

<% for party in current_host.parties.all %>
    <tr>
      <td><%= party.party_type.name %></td>
      <td><%=link_to party.name, party_path(party)%></td>
      <td><%= party.location.name %></td>
      <td><%= party.party_date.strftime("%m/%d/%y") %></td>
      <td><%= party.start_time.strftime("%a,%l:%M%p") %></td>
      <td><%= party.end_time.strftime("%a,%l:%M%p") %></td>
      <td><%= party.description %></td>
      <td><%= party.rsvp_date.strftime("%m/%d/%y") %></td>
    </tr>
  <% end %>
</table>
<%end%>
<%end%>
